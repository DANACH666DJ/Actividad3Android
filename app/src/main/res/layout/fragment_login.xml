<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="utad.actividad3android.LoginFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/textoLogin"
        android:textSize="26dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:background="@color/primary_text_disabled_material_light"
        tools:ignore="HardcodedText,PrivateResource,SpUsage" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="148dp"
        android:layout_below="@+id/textView"
        android:id="@+id/usuario"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:id="@+id/textView2"
        android:textSize="24sp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:layout_below="@+id/textView5"
        android:layout_alignStart="@+id/usuario"
        android:layout_marginTop="24dp"
        android:id="@+id/contraseña" />

    <TextView
        android:text="Contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a Registro"
        android:id="@+id/botonRegistro"
        android:layout_marginBottom="19dp"
        tools:ignore="HardcodedText"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView5" />

    <Button
        android:text="Ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnOkLogin"
        android:layout_below="@+id/contraseña"
        android:layout_alignStart="@+id/textView2" />

</RelativeLayout>
